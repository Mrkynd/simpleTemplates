<div class="ui container">
  <form class="ui fluid form" action="/login" method="POST">
      <label class="field" for="username">Username</label>
        <input type="text" name="username" value="{{qs.username}}"><br>
        <div class="ui pointing red basic label">{{usernameErr}}</div>
      <label class="field" for="password">Password</label>
        <input type="password" name="password" value="{{qs.password}}">
        <div class="ui pointing red basic label">{{passwordErr}}</div>
        <input id="submit" class="ui teal button" type="submit" value="Submit">
        <div class="ui pointing red basic label">{{err}}</div>
  </form>
</div>
